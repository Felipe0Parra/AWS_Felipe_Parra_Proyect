import pandas as pd
import boto3
from sklearn.ensemble import IsolationForest
import matplotlib.pyplot as plt

# 1. Descargar datos desde S3 (Independencia total de OpenSearch)
bucket_name = 'backup-logs-proyecto18-f-p'
file_key = 'anomaliasPruebaSageMaker.csv'
local_file = 'datos.csv'

s3 = boto3.client('s3')
s3.download_file(bucket_name, file_key, local_file)

# 2. Cargar datos
df = pd.read_csv(local_file)
data = df[['cpu_usage']]

# 3. Entrenar el Modelo de IA (Isolation Forest)
# Este algoritmo busca datos que son "diferentes" a la mayoría
model = IsolationForest(contamination=0.2)
df['anomalia'] = model.fit_predict(data)

# Las anomalías se marcan con -1, los normales con 1
anomalies = df[df['anomalia'] == -1]

# 4. Generar Gráfica de Evidencia
plt.figure(figsize=(10,6))
plt.plot(df['cpu_usage'], label='CPU Normal', color='blue')
plt.scatter(anomalies.index, anomalies['cpu_usage'], color='red', label='Anomalía Detectada', s=100)
plt.title('Detección de Anomalías con SageMaker')
plt.legend()
plt.savefig('reporte_anomalias.png')

# 5. Guardar el Resultado en S3 (Persistencia)
s3.upload_file('reporte_anomalias.png', bucket_name, 'resultados/reporte_grafico.png')

print("¡Análisis completado! La imagen se guardó en S3.")
